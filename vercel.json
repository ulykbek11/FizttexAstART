{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/ws/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}
